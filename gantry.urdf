<?xml version="1.0"?>
<robot name="gantry">
  <!-- World 링크 -->
  <link name="world"/>

  <!-- X축 이동 -->
  <link name="x_axis">
    <visual>
      <geometry>
        <box size="2.0 0.1 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="2.0 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- Y축 이동 -->
  <link name="y_axis">
    <visual>
      <geometry>
        <box size="0.1 2.0 0.1"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 2.0 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- Z축 이동 -->
  <link name="z_axis">
    <visual>
      <geometry>
        <box size="0.1 0.1 2.0"/>
      </geometry>
      <material name="green">
        <color rgba="0 0.8 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 2.0"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- 로봇 마운트 -->
  <link name="robot_mount">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- X축 관절 -->
  <joint name="x_joint" type="prismatic">
    <parent link="world"/>
    <child link="x_axis"/>
    <origin xyz="0 0 2.0"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000" lower="-2.0" upper="2.0" velocity="1.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- Y축 관절 -->
  <joint name="y_joint" type="prismatic">
    <parent link="x_axis"/>
    <child link="y_axis"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="1000" lower="-2.0" upper="2.0" velocity="1.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- Z축 관절 -->
  <joint name="z_joint" type="prismatic">
    <parent link="y_axis"/>
    <child link="z_axis"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000" lower="-1.0" upper="1.0" velocity="1.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- 로봇 마운트 조인트 -->
  <joint name="mount_joint" type="fixed">
    <parent link="z_axis"/>
    <child link="robot_mount"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>
  </joint>
</robot> 